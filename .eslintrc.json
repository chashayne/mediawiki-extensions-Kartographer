{
	"root": true,
	"extends": "wikimedia",
	"env": {
    "es6": true,
		"browser": true,
		"jquery": true,
		"qunit": true
	},
	"globals": {
		"mw": true,
		"mediaWiki": false,
		"require": false,
		"module": false,
		"OO": false,
		"L": false
	},
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
	"rules": {
		"dot-notation": [
			"error",
			{
				"allowKeywords": true
			}
		],
		"indent": [
      "off",
      2,
      { "SwitchCase": 1,
        "CallExpression": {"arguments": 1}
      }
    ],
    "comma-dangle": [
      "warn",
      "always-multiline"
    ],
		"space-before-function-paren": ["off", "never"],
		"space-in-parens": ["off", "always"],
		"space-before-blocks": ["off", "always"],
    "no-unused-vars": ["warn"],
		"no-underscore-dangle": ["off"],
		"vars-on-top": ["off"],
		"one-var": ["off"],
		"keyword-spacing": ["off"],
		"computed-property-spacing": ["off"],
		"space-infix-ops": ["off"]
	}
}
